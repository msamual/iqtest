# Production Dockerfile for Angular
FROM node:20-alpine AS build

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies (including dev dependencies for build)
RUN npm ci

# Copy source code
COPY . .

# Build the application for production
RUN npm run build

# Production stage with Nginx
FROM nginx:alpine AS production

# Install curl for health checks
RUN apk add --no-cache curl

# Copy built app to nginx
COPY --from=build /app/dist/iq-test-frontend/browser /usr/share/nginx/html

# Copy nginx configuration and entrypoint script
COPY nginx.prod.conf /etc/nginx/conf.d/default.conf
COPY entrypoint.sh /entrypoint.sh

# Create SSL directory and make entrypoint executable
RUN mkdir -p /etc/ssl/certs && chmod +x /entrypoint.sh

# Expose ports
EXPOSE 80 443

# Use custom entrypoint
ENTRYPOINT ["/entrypoint.sh"]
